        <ProgressBar x:Name="prgrs_bar" HorizontalAlignment="Left" Height="14" Margin="33,590,0,0" VerticalAlignment="Top" Width="966" Background="{x:Null}" Opacity="0.8" Foreground="Red" BorderBrush="{x:Null}"/>
        <Image x:Name="img_perya" HorizontalAlignment="Left" Height="136" Margin="845,467,0,0" VerticalAlignment="Top" Width="147" Source="/перья.png" RenderTransformOrigin="0.5,0.5" Visibility="Hidden">
