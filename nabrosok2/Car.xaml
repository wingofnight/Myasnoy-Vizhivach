            <Ellipse.Fill>
                <ImageBrush ImageSource="/battonEngine.png"/>
            </Ellipse.Fill>
            <Ellipse.Stroke>
                <ImageBrush ImageSource="/battonEngine.png"/>
            </Ellipse.Stroke>
        </Ellipse>

